{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:react/recommended",
        "prettier",
        "prettier/react"
    ],
    "plugins": ["prettier", "react"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-console": "off",
        "react/prop-types": ["error", {"ignore": ["navigation"]}],
        "prettier/prettier": [
            "error",
            {
                "singleQoute": true,
                "printWidth": 120
            },
            {
                "usePrettierrc": false
            }
        ],
        "semi": 2,
        "no-undef": "warn"
    }
}
